</head>
<body>


<div class="page-header">
  <h1><center>Customerservers</center></h1>
</div>

<div class="panel-body">
  <%= form_for :search, method: :get do |f| %>
    <div class="form-inline">
    <div class="form-group">
  <%= f.label :query, '搜索条件' %>
  <%= f.text_field :query, value: @search.query %>
  </div>
  <div class="form-group">
    <input name="search[deadline]" type="radio" value="desc" />
    <label>deadline desc</label>
    <input name="search[deadline]" type="radio" value="asc" />
    <label>deadline asc</label>
  </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary"><%= t("button.search") %></button>
    </div>
  </div>
  <% end %>
</div>

<ul class="side-nav">
  <li style="font-size: 1.5em;"><%= link_to "Customers",         customers_path    %></li>
  <li style="font-size: 1.5em;"><%= link_to "Cloudservices",     cloudservices_path %></li>
  <li style="font-size: 1.5em;"><%= link_to "Customerservers",   customerservers_path %></li>
  <li style="font-size: 1.5em;"><%= link_to "Projects",           projects_path %></li>
</ul>

<!--input type="text"></input>
<input type="button" value="搜索"></input-->


<table class="table table-striped table-bordered table-hover tablesorter">
  <thead>
    <tr id="theader">
      <th>Code</th>
      <th>Customerservice</th>
      <th>Customer</th>
      <th>Deadline</th>
      <th>Our server</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customerservers.each do |customerserver| %>
      <tr>
        <td><%= customerserver.code %></td>
        <td><%= customerserver.customerservice %></td>
        <td><%= customerserver.customer %></td>
        <td><%= customerserver.deadline %></td>
        <td><%= customerserver.our_server %></td>
        <td><%= link_to 'Show', customerserver %></td>
        <td><%= link_to 'Edit', edit_customerserver_path(customerserver) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customerserver', new_customerserver_path %>

<br>

<%= link_to 'Our server',         cloudservices_path %>

<br>

<%= link_to 'Return to the home page', home_path    %>

</body>
</html>
